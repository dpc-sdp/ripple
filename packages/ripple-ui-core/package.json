{
  "name": "@dpc-sdp/ripple-ui-core",
  "packageManager": "pnpm@7.23.0",
  "version": "2.1.0-alpha.63",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src",
    "./postcssrc.json",
    "README.md"
  ],
  "main": "./dist/rpl-lib.umd.js",
  "module": "./dist/rpl-lib.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/rpl-lib.es.js",
    "./nuxt": "./dist/nuxt.js",
    "./webcomponents": "./dist/web-components/rpl-wc.es.js",
    "./style": "./dist/global.css",
    "./style/breakpoints": "./src/styles/_breakpoints.css",
    "./style/components": "./dist/style.css"
  },
  "scripts": {
    "dev": "concurrently \"wait-on -i 2000 tcp:6006 && pnpm test:storybook --watch\" \"pnpm:watch\" \"pnpm:storybook\" --handle-input",
    "build": "pnpm clean && pnpm build:tokens && pnpm build:styles && pnpm build:types && pnpm build:lib && pnpm build:wc",
    "build:types": "tsc -p tsconfig.json",
    "build:lib": "vite build",
    "build:wc": "vite build --config wc.vite.config.ts",
    "build:styles": "vite build --config global-css.vite.config.ts && rimraf ./dist/delete.es.js",
    "build:svg-sprite": "ts-node ./src/scripts/generate-icon-sprite.ts",
    "build:custom-svg-list": "ts-node ./src/scripts/generate-custom-icon-list.ts",
    "build:tokens": "node ./tokens/processor.js",
    "watch": "pnpm build:types && vite build --watch",
    "clean": "(rimraf dist* && rimraf tsconfig.tsbuildinfo) | true",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test:components": "cypress run --component",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json",
    "test:storybook": "test-storybook --stories-json",
    "test:storybook-ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && pnpm test:storybook\""
  },
  "dependencies": {
    "@nuxt/kit": "3.0.0",
    "@vueuse/core": "^9.10.0",
    "@vueuse/integrations": "^9.10.0",
    "date-fns": "^2.29.3",
    "focus-trap": "^7.2.0",
    "mitt": "^3.0.0",
    "normalize.css": "^8.0.1",
    "postcss-each": "^1.1.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.0",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.3",
    "swiper": "^8.4.5",
    "vite-svg-loader": "^4.0.0",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@originjs/vite-plugin-content": "^1.0.2",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/compiler-sfc": "^3.2.45",
    "autoprefixer": "^10.4.12",
    "chromatic": "^6.14.0",
    "http-server": "^14.1.0",
    "jest-axe": "^7.0.0",
    "pathe": "^1.0.0",
    "storybook-addon-designs": "^6.2.1",
    "style-dictionary": "^3.7.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "ts-node": "^10.7.0",
    "vite": "3.2.5",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-dts": "^1.7.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-svg": "^0.1.0",
    "wait-on": "^7.0.1",
    "yaml": "^2.2.1"
  }
}
